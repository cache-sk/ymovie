{
	"name": "ymovie",
	"version": "1.0.0",
	"description": "ymovie",
	"engines": {
		"node": "12.x"
	},
	"main": "server/index.js",
	"scripts": {
		"build": "node build/prepare.js && npm run build-client && npm run build-server",
		"build-client": "npm run prepare-client && npm run compile-hbbtv && npm run compile-web",
		"build-server": "node server/build/prepare.js",
		"compile-hbbtv": "tsc --project client/tsconfig-hbbtv.json",
		"compile-web": "tsc --project client/tsconfig-web.json",
		"prepare-client": "node client/build/prepare.js",
		"start": "npm run build && node dist/server/index.js",
		"start-debug": "npm run build && node --inspect dist/server/index.js debug"
	},
	"license": "MIT",
	"dependencies": {
		"@babel/core": "^7.10.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-preset-minify": "^0.5.1",
		"csso": "^4.0.3"
	},
	"devDependencies": {
		"typescript": "^4.1.5"
	}
}
