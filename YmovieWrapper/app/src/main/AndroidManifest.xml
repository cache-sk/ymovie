<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    package="cz.streamcinema.ymovie.wrapper" tools:ignore="MissingLeanbackLauncher">

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/ymovie_logo"
        android:logo="@drawable/ymovie_logo"
        android:banner="@drawable/ymovie_banner"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.YmovieWrapper" >
        <activity
            android:exported="true"
            android:name=".MainActivity"
            android:icon="@drawable/ymovie_logo"
            android:logo="@drawable/ymovie_logo"
            android:banner="@drawable/ymovie_banner"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            tools:ignore="WrongManifestParent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>